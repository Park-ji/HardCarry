<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.hardcarry.MainActivity"
    android:padding="8dp"
    android:background="@drawable/main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button_update_location"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/button_update_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/refresh" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/button_start"
        android:layout_width="342dp"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:adjustViewBounds="true"
         />

    <ImageView
        android:id="@+id/button_setting"
        android:layout_width="200dp"
        android:layout_height="93dp"
        android:layout_alignEnd="@+id/button_start"
        android:layout_alignRight="@id/button_start"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
         />

</RelativeLayout>
